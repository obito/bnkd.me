---
// src/components/TellMe.astro

import PlaceholderIcon from "../assets/bnkd.png"; 
import { Image } from 'astro:assets';

const { class: className } = Astro.props;
---

{/* Outer section - Removed padding and background */}
<section class={`w-full ${className}`}>
  {/* Inner div - Added bottom padding */}
  <div class="relative z-10 w-full bg-gradient-to-br from-slate-100 to-slate-200/70 rounded-t-[80px] md:rounded-t-[120px] -mt-8 md:-mt-12 pt-20 md:pt-32 px-8 pb-20 md:pb-32 md:px-16 shadow-subtle flex flex-col items-center text-center">
    
    {/* Icon - Using scroll animation (keep levitate) */}
    <div class="w-16 h-16 md:w-20 md:h-20 mb-8 bg-dark-blue rounded-full flex items-center justify-center shadow-lg animate-levitate">
      {/* Replace with actual icon component or Image */}
      <Image src={PlaceholderIcon} alt="BNKD Logo" class="w-14 h-14 md:w-20 md:h-20 filter brightness-0 invert" width={64} height={64} />
    </div>

    {/* Heading - Using scroll animation + delay */}
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif font-medium text-dark-blue mb-4 md:mb-6 animate-on-scroll delay-100">
      Tell Me About Your Next <br class="hidden md:block"/>High-Impact Project
    </h2>

    {/* Subheading - Using scroll animation + delay */}
    <p class="text-base md:text-lg text-slate-600 max-w-lg mx-auto mb-8 md:mb-10 animate-on-scroll delay-200">
      Engineering seamless experiences that drive real engagement at any scale, on any platform.
    </p>

    {/* Button Row - Using scroll animation + delay */}
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 animate-on-scroll delay-300">
      {/* Dark Button (Contact Me) - Copied from Hero */}
      <a
        href="/contact" 
        class="inline-flex items-center justify-center gap-2 px-7 py-3.5 text-white font-medium rounded-[10px] shadow-dark-button-inspired bg-[linear-gradient(127deg,rgb(14,28,41)-68%,rgb(50,61,104)100%)] hover:brightness-110 active:brightness-95 transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-100 focus:ring-blue-500"
      >
        {/* Copied SVG Icon from Hero (Let's Chat) */}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25"
          ></path>
        </svg>
        <span>Contact Me</span>
      </a>

      {/* Light Button (See Projects) - Copied from Hero */}
      <a
        href="/projects" 
        class="inline-flex items-center justify-center gap-2 px-7 py-3.5 text-slate-800 font-medium rounded-[10px] shadow-light-button-inspired bg-[linear-gradient(126deg,rgba(255,255,255,0.8)-44%,rgba(240,248,255,0.9)55%)] hover:brightness-95 active:brightness-90 transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-100 focus:ring-blue-500"
      >
        {/* Copied SVG Icon from Hero (See Projects) */}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
          ></path>
        </svg>
        <span>See Projects</span>
      </a>
    </div>

    {/* Footer Section - Using scroll animation + delay */}
    <div class="w-full max-w-4xl mt-12 md:mt-16 pt-8 border-t border-slate-300/70 animate-on-scroll delay-400"> 
      <p class="text-sm text-slate-500 text-center">
        Â© {new Date().getFullYear()} Youssef Benkdane. All rights reserved.
      </p>
      {/* Add other footer links/elements here if needed */}
    </div>

  </div>
</section>

<style>
@keyframes levitate {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px); /* Adjust vertical distance as needed */
  }
}

.animate-levitate {
  animation: levitate 3s ease-in-out infinite; /* Adjust duration and timing function */
}

/* Keyframes for fadeInUp are assumed to be in global CSS */
</style>
